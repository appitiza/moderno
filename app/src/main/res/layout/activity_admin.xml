                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/semi_margin"
                    android:layout_marginRight="@dimen/semi_margin"
                    android:layout_weight="1"
                    android:background="@drawable/admin_home_btn_bg"
